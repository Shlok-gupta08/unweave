# ============================================================
# Unweave Environment Configuration
# Copy this file to .env and modify as needed
# ============================================================

# ---- GPU / Device Settings ----
# Override automatic GPU detection. Options: cuda, mps, directml, cpu
# Leave empty for automatic detection (recommended)
DEVICE_OVERRIDE=

# ---- Backend Settings ----
HOST=0.0.0.0
PORT=8000

# Number of uvicorn workers (increase for cloud deployment)
# Default: 1 (recommended for GPU workloads)
WORKERS=1

# ---- Frontend Settings ----
VITE_API_URL=http://localhost:8000

# ---- Cloud Deployment ----
# Set to "true" to enable cloud-optimized settings
# (aggressive cleanup, memory limits, health probes)
CLOUD_MODE=false

# Maximum file size in MB (default: 50)
MAX_FILE_SIZE_MB=50

# Stem cleanup interval in seconds (default: 3600 = 1 hour)
CLEANUP_INTERVAL_SECONDS=3600
